@{
    ViewData["Title"] = "MentorGPT";
}
@model ProjectSigmoind.Domain.Models.PromntModel




<head>
    <style>
       

    </style>

</head>

<body>
    <div class="center-div">
        <div class="chat-form">
            <form asp-action="Index" method="post">
                <label asp-for="UserPromnt">Let's learn something new:</label>
                <input asp-for="UserPromnt" type="text" placeholder="Ask me anything..." />
                <span asp-validation-for="UserPromnt" class="text-danger"></span>

                <button type="submit">Submit</button>
            </form>

            @if(Model != null && !string.IsNullOrWhiteSpace(Model.Response)) {
                <div class="response-box">
                    <strong>Answer:</strong>
                    <p>@Model.Response</p>

                    @if(Model.Links != null && Model.Links.Any()) {
                        <strong>Value reference:</strong>
                        <ul>
                            @foreach(var link in Model.Links) {
                                <li><a href="@link.Value" target="_blank">@link.Key</a></li>
                            }
                        </ul>
                    }
                </div>
            }
        </div>
    </div>
</body>
